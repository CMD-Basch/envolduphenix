{% extends "envol/standard.html.twig" %}

{% block title_banner %}
    Admin - {{ menu.name }}
{% endblock %}

{% block container %}
    <div class="row justify-content-center">
        <div class="col-sm-8">
            <h3 class="titre-page">Liste des pages</h3>
            <hr class="hr-titre">
            <span>
                <a href="{{ path('admin.home') }}" >Panneau d'administration</a> /
                {{ menu.name }}
            </span>
        </div> <!-- col -->
    </div> <!-- row -->
    <div class="row justify-content-center mt-4">
        <div class="col-sm-4">
            <a href="{{ path('admin.add', {'type': type }) }}">Ajouter une page</a>
            <ul>
            {% for view in views %}
                {% if view.fixed %}
                    <li>{{ view.name }}</li>
                {% else %}
                    <li><a href="{{ path('admin.edit', {'type': type, 'view': view.id }) }}">{{ view.name }}</a></li>
                {% endif %}
            {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}