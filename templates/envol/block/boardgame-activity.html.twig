{% if activity.master == app.user %}
    {% set slotted = 'master' %}
    {% set panel_color = 'card-invites' %}
{% elseif activity.isPlayer( app.user ) %}
    {% set slotted = 'player' %}
    {% set panel_color = 'card-invites' %}
{% else %}
    {% set slotted = false %}
    {% set panel_color = 'card-blue' %}
{% endif %}

    <div class="card {{ panel_color }}">
        <div class="card-header">
            <h4>{{ activity.name }}</h4>
        </div>
        <div class="card-body">
            <p> <strong>Jeu :</strong> {{ activity.game }}<br>
                <strong>Style :</strong> {{ activity.style }}<br>
                <strong>Horaires :</strong> de {{ activity.toStringStart }} Ã  {{ activity.toStringEnd }}<br>
                <strong>Description :</strong><br>
                {{ activity.description }}<br>
                <strong>Places libres:</strong> {{ activity.freeSlots }} / {{ activity.slots }}<br>
                <strong>Joueurs :</strong><br>
                {% for player in activity.players %}
                    {{ player.username }}{% if loop.last != true %}, {% endif %}
                {% endfor %}
            </p>
            <p>
            {% if app.user %}
                {% if is_granted('ROLE_JDS') %}
                    <a class="btn btn-outline-secondary" role="button" href="{{ path('boardgame.edit', {'activity' : activity.id }) }}">Modifier</a>
                {% endif %}
                {% if activity.master == app.user %}
                    <!--<a class="btn btn-active " href="#">Modifier</a>-->
                {% elseif activity.isPlayer( app.user ) %}
                    <a class="btn btn-outline-primary btn-table" data-act="leave" data-table-id="{{ activity.id }}" href="#">Quitter</a>
                {% elseif not activity.isFreeSlots() %}
                    <a class="btn btn-outline-secondary disabled" role="button" tabindex="-1" aria-disabled="true" href="#">Partie pleine</a>
                {% elseif activityuser.isEventTimeFree( event ) %}
                    <a class="btn btn-outline-primary btn-table" data-act="join" data-table-id="{{ activity.id }}" href="#">Rejoindre</a>
                {% endif %}

            {% endif %}
            </p>
        </div>
    </div>
