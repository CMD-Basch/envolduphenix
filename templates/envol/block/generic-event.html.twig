{% if event.master == app.user %}
    {% set slotted = 'master' %}
    {% set panel_color = 'card-invites' %}
{% elseif event.isPlayer( app.user ) %}
    {% set slotted = 'player' %}
    {% set panel_color = 'card-invites' %}
{% else %}
    {% set slotted = false %}
    {% set panel_color = 'card-blue' %}
{% endif %}



        <h4>{{ event.name }}</h4>


        <p> <strong>Jeu :</strong> {{ event.game }}<br>
            <strong>Style :</strong> {{ event.style }}<br>
            <strong>Places libres:</strong> {{ event.freeSlots }} / {{ event.slots }}<br>
        </p>

