<footer>
    <div class="container">
        <div class="row">
            <div class="col-sm-2 footer-navigation">
                <h3>NAVIGATION</h3>
                <nav>
                    <ul>
                        <li><a href="#">Accueil</a></li>
                        <br/>
                        {% for menu in event().menus %}
                        <li><a href="#">{{ menu.name }}</a></li>
                        {% for view in menu.views %}
                            <li><a href="{{ view|view_url }}">• {{ view.name }}</a></li>
                        {% endfor %}

                        {% if loop.index == ( loop.length / 2 )|round(0, 'floor') %}
                    </ul>
                </nav>
            </div>
            <div class="col-sm-2 footer-navigation">
                <h3 id="nav-hidden">NAVIGATION</h3>
                <nav>
                    <ul>
                        {% elseif not loop.last %}
                            <br/>
                        {% endif %}

                        {% endfor %}

                    </ul>
                </nav>
            </div> <!-- col -->
            <div class="col-sm-4">
                <h3>QUI SOMMES-NOUS ?</h3>
                    <div class="footer-text">
                        <p>{{ sEvent().theEvent.footerText|raw }}</a></p>
                    </div>
            </div> <!-- col -->
            <div class="col-md-4">
                <div class="fb-page"
                     data-href="{{ sEvent().theEvent.facebookLink }}"
                     data-tabs=""
                     data-small-header="true"
                     data-adapt-container-width="true"
                     data-hide-cover="false"
                     data-height="830"
                     data-show-facepile="true">
                    <blockquote cite="{{ sEvent().theEvent.facebookLink }}" class="fb-xfbml-parse-ignore">
                        <a href="{{ sEvent().theEvent.facebookLink }}">Evenement</a>
                    </blockquote>
                </div>
            </div> <!-- col -->
        </div> <!-- row -->
    </div> <!-- container -->
</footer>


